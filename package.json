{
  "name": "viessmann-api-client",
  "version": "1.0.0",
  "description": "a node js api client for the viessmann heating api",
  "scripts": {
    "build": "tsc",
    "test": "nyc mocha -r ts-node/register test/**/*.spec.ts",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "all": true
  },
  "keywords": [],
  "author": "Thomas Vidic",
  "license": "MIT",
  "main": "dist/viessmann-api-client.js",
  "types": "dist/viessmann-api-client.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/thovid/node-viessmann-api-client.git"
  },
  "bugs": {
    "url": "https://github.com/thovid/node-viessmann-api-client/issues"
  },
  "dependencies": {
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.15",
    "@types/simple-oauth2": "^1.5.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "simple-oauth2": "^1.5.0",
    "siren-parser": "^7.1.0",
    "siren-types": "^1.0.0-rc4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/nock": "^9.3.0",
    "@types/sinon": "^5.0.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "nock": "^10.0.2",
    "nyc": "^13.1.0",
    "sinon": "^7.1.1",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.1"
  }
}